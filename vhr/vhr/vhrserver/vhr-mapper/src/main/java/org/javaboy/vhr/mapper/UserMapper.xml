<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.javaboy.vhr.mapper.UserMapper" >

  <sql id="Base_Column_List" >
    id, username, password, phoneNum, accountId
  </sql>
  <!--  用户的注册-->
  <insert id="webRegister" parameterType="org.javaboy.vhr.model.User">
    insert into user(id, userName, passWord,
      phoneNum, accountId)
    values (#{id}, #{userName}, #{passWord},
      #{phoneNum}, #{accountId})
  </insert>
  <!--用户的登录-->
  <select id="webLogin" parameterType="java.lang.String" resultType="org.javaboy.vhr.model.User">
    select *
    from user
     where phoneNum = #{phoneNum} and passWord = #{passWord}
  </select>

<!--  根据手机号查找用户-->
  <select id="getUserByPhoneNum" parameterType="java.lang.String" resultType="org.javaboy.vhr.model.User">
    select *
    from user
    where phoneNum = #{phoneNum}
  </select>
</mapper>